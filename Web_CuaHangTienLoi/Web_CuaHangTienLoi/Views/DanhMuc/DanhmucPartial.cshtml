@using Web_CuaHangTienLoi.Models;
@model List<LOAISP>


@{
    ViewBag.Title = "MINISTOP - Danh Mục";
}

<div>
    <h3 style="padding-left:20px">Danh Mục</h3>
    @{
        foreach (var item in Model)
        {
            <button type="button" class="btn btn-primary">
                <a href="@Url.Action("SanPhamTheoLH", "DanhMuc", new { @maLH = item.MALOAI })">@item.TENLOAI</a>
            </button>
        }
    }
</div>
<br />
<style>
    a {
        text-decoration: none;
        color: white;
    }

    a:hover {
            text-decoration: none;
            color: white;
    }
    h3 {
        color: #ff6a13;
        font-size: 23px;
        font-weight: 700;
        display: inline-block;
        background: #fff;
        width: 100%;
        padding: 19px 5px;
        line-height: 1.4;
    }
</style>