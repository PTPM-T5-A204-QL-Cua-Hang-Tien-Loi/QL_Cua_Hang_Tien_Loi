@using Web_CuaHangTienLoi.Models
@model SANPHAM

@{
    ViewBag.Title = "MINISTOP - " + @Model.TENSP;
}

<style>
    .main-product {
      width: 100%;
      height: 652px;
      position: relative;
      background: white;
    }
    .main-product .product-item {
      padding: 68px 0 0;
    }
    .container {
      max-width: 1200px;
      width: 100%;
      margin: 0 auto;
      padding: 0 10px;
      position: relative;
    }
    .main-product .product-item .wrap .copy h3 {
      font-family: "Montserrat", sans-serif;
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 2.6rem;
    }
    .main-product .product-item .wrap .img {
      max-width: 460px;
    }
    .main-product .product-item .wrap .img .item {
      background: white;
      width: 100%;
      height: 0;
      padding-bottom: 100%;
      float: left;
      border-left: 1px solid #f0f0f0;
      position: relative;
      box-shadow: 0px 0px 30px -10px rgba(0, 0, 0, 0.5);
    }
    
    .main-product .product-item .wrap:first-child {
      width: 45%;
    }
    .main-product .product-item .wrap:last-child {
      width: 55%;
      padding-top: 30px;
    }
    .main-product .product-item .wrap {
      width: 50%;
      float: left;
      padding: 0 1rem;
    }
    .main-product .product-item .wrap .copy .category {
      color: #007cff;
      font-weight: 700;
      font-size: 16px;

    }
    .main-product .product-item .wrap .copy .category span {
      color: black;
      text-transform: uppercase;
      font-size: 13px;
    }
    .main-product .product-item .wrap .copy .prize {
      color: #007cff;
      font-size: 16px;
      font-weight: 700;
      padding: 25px 0;
    }
    .main-product .product-item .wrap .copy .prize span {
      font-size: 24px;
      color: #ff6a13;
    }

   
    /*//*/
    .product-price-btn {
      height: 103px;
      width: 327px;
      margin-top: 17px;
      position: relative;
    }

    .product-price-btn p {
      display: inline-block;
      position: absolute;
      top: -13px;
      height: 50px;
      font-family: 'Trocchi', serif;
      margin: 0 0 0 38px;
      font-size: 28px;
      font-weight: lighter;
      color: #f0f0f0;
    }

    .product-price-btn button {
      float: right;
      display: inline-block;
      height: 50px;
      width: 250px;
      margin: 0 40px 0 16px;
      box-sizing: border-box;
      border: transparent;
      border-radius: 60px;
      font-family: 'Raleway', sans-serif;
      font-size: 14px;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: #ffffff;
      background-color: #021e3d;
      cursor: pointer;
      outline: none;
    }

    .product-price-btn button:hover {
      background-color: #004b9c;
    }
</style>

<br />
<div class="main-product">
    <div class="container">
        <article class="product-item">
            <div class="wrap">
                <div class="img">
                    <div class="item">
                        <article>
                            <figure><img src="~/Images/@Model.HINHANH" alt="thumb"></figure>
                        </article>
                    </div>
                </div>
            </div>
            <div class="wrap">
                <div class="copy">
                    <h3>@Model.TENSP</h3>
                    <div class="category">Danh mục: <span>@Model.LOAISP.TENLOAI</span></div>                   
                    <div class="prize">Giá tiền: <span>@String.Format("{0:0,0}", @Model.DONGIABAN) VNĐ</span></div>
                    
                    <div class="product-price-btn">

                            <button type="submit" id="bgnGioHang" class="buy-btn">Thêm vào giỏ hàng</button>
                        

                    </div>               
                </div>
            </div>
        </article>
    </div>
</div>
<br />